{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "🚀 启动FastAPI应用",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEBUG": "true"
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🧪 调试当前测试文件",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🧪 运行所有测试",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🎯 调试特定测试方法",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests/test_api.py::TestHealthAPI::test_root_endpoint",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🔧 调试爬虫服务",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/services/crawling_service.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🤖 调试AI分析模块",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/core/ai/page_analyzer.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🌐 调试浏览器控制器",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/core/browser/browser_controller.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "📊 调试数据库操作",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/database.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DATABASE_URL": "sqlite:///./debug.db"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "🔍 附加到运行中的进程",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "🐳 Docker容器调试",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}